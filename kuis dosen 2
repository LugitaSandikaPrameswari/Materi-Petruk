 #include <iostream>
 using namespace std;

 int main() {
     int a, c;
     int* ptr;

     cout << "Masukkan bilangan ke-9 npm anda: ";
     cin >> a;
     cout << "Masukkan bilangan ke-10 npm anda: ";
     cin >> c;

     int npm = a * 10 + c;

     ptr = &npm;

     cout << "isi pointer mu " << *ptr << endl;
     cout << "data disimpan di" << ptr << endl;

     return 0;
 }
